SEGMENT  CodeSegment:
   LDR  R1, R0, VAL1   ; R1 <= 1	
   LDR  R2, R0, VAL2   ; R2 <= 5
   LDR  R3, R0, VAL3   ; R3 <= 31	
        
   LSHF R4, R2, 4
   LSHF R4, R4, 2
   RSHFL R5, R2, 2
   RSHFL R6, R3, 5
   STR R4, R0, RESULT1
   STR R5, R0, RESULT2
   STR R6, R0, RESULT3

   
   LDR R3, R0, VAL4
   RSHFA R3, R3, 4
   RSHFA R3, R3, 2
   STR R3, R0, RESULT4
                        

HALT:
    BRnzp HALT
VAL1:	DATA2 4x0001
VAL2:	DATA2 4x0005
VAL3:	DATA2 4x001F
VAL4:   DATA2 4x8077
GOOD:	DATA2 4x600D
BAD:    DATA2 4x0BAD
RESULT1:	DATA2 4x0000
RESULT2:	DATA2 4x0000
RESULT3:	DATA2 4x0000
RESULT4:	DATA2 4x0000

